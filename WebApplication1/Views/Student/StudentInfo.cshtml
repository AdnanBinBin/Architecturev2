@model WebApplication1.Models.StudentInfoViewModel

@{
    ViewData["Title"] = "Student Information";
}

<!DOCTYPE html>
<html>
    <head>
        <title>Informations de l'étudiant</title>
    </head>
    <body>
        
        <div class="container">
            <h1 class="text-center my-4">Student's Information</h1>
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-12 col-xl-4">

                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body text-center">
                                <div class="mt-3 mb-4">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava2-bg.webp"
                                        class="rounded-circle img-fluid" style="width: 100px;" />
                                </div>
                                <h4 class="mb-2">@Model.User.FirstName @Model.User.LastName</h4>
                                <div class="text-center mt-5 mb-2">
                                    <div class="mb-2">
                                        <p class="h5">@Model.Budget.Balance</p>
                                        <p class="text-muted mb-0">Balance</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between mt-5">
                                    <form asp-controller="Student" asp-action="RedirectDepositStudent" method="post">
                                        <button class="btn btn-primary" type="submit">Deposit</button>
                                    </form>
                                    <form asp-controller="Student" asp-action="RedirectPrint" method="post">
                                        <button class="btn btn-primary" type="submit">Print</button>
                                    </form>
                                    <form asp-controller="Student" asp-action="RedirectTransactions" method="post">
                                        <button class="btn btn-primary" type="submit">See transactions</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
        </div>
    </body>
</html>